---
import { Icon } from '@astrojs/starlight/components';
import Default from '@astrojs/starlight/components/Page.astro';

const { entry } = Astro.locals.starlightRoute;
const { author, pubDate } = entry.data;

// Debug information
console.log('Entry data:', entry.data);
console.log('Author:', author);
console.log('Publication date:', pubDate);
---

<Default>
  <div class="sl-page-meta">
    {author && (
      <div class="sl-page-author">
        <Icon name="user" />
        <span>{author}</span>
      </div>
    )}
    {pubDate && (
      <div class="sl-page-date">
        <Icon name="calendar" />
        <time datetime={pubDate.toISOString()}>
          {pubDate.toLocaleDateString('zh-CN', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
      </div>
    )}
  </div>
  <slot />
</Default>

<style>
  .sl-page-meta {
    display: flex;
    gap: 1.5rem;
    margin: 1rem 0 2rem;
    color: var(--sl-color-gray-3);
    font-size: 0.9rem;
  }

  .sl-page-author,
  .sl-page-date {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .sl-page-author :global(svg),
  .sl-page-date :global(svg) {
    width: 1rem;
    height: 1rem;
  }
</style> 
